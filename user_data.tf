# ------------------------------------------- user data ------------------------------------------------
data "template_file" "user_data" {
  template = file("userdata.tftpl")
  vars = {
    server_port = var.server_port
  }
}

#aws_ami
data "aws_ami" "amzlinux" {
  most_recent = true
  owners      = ["amazon"]
  filter {
    name   = "name"
    values = ["amzn2-ami-kernel-*-gp2"]
  }
  filter {
    name   = "architecture"
    values = ["x86_64"]
  }
  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
  filter {
    name   = "root-device-type"
    values = ["ebs"]
  }
}
